@model GraphicCard

<!--Formularz sprzedaży karty graficznej-->

@using (Html.BeginForm("Create", "Sell", FormMethod.Post))
{
    <!--Wyświetlamy w bloku poszczególne rubryki do wypełnienia-->
<div class="form-block">
    <center>
        <h3>Fill the gaps</h3>
    </center>
    <!--Nazwa producneta>-->
    <div class="form-group">
        @Html.LabelFor(model => model.Producer.ProducerName)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Producer.ProducerName)
        </div>
    </div>
    <!--Nazwa karty-->
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Name)
        </div>
    </div>
    <!--Cena-->
    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Price)
        </div>
    </div>
    <!--Przycisk potwierdzający wystawienie przedmiotu-->
    <input type="submit" value="Add" class="btn btn-primary" />

</div>
}